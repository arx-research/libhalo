{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "es2022",
      "dom"
    ],
    "moduleResolution": "node16",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "rootDir": "./src.ts/",
    "strict": true,
    "sourceMap": true,
    "target": "es2022",
    "module": "node16",
    "outDir": "./lib.esm",
    "allowJs": true
  },
  "include": [
    "./src.ts/**/*.ts",
    "./src.ts/**/*.js"
  ],
  "exclude": []
}
